<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.BasicFragment">

    <!-- TODO: Update blank fragment layout -->

    <ListView
        android:id="@+id/listViewBasicItems"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ProgressBar
        android:id="@+id/progressBarBasicServiceList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_gravity="bottom"
        android:background="@color/ellipse_1_color"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/textViewYourBasket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:text="Your Basket"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/noOfItemInCart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="50dp"
            android:layout_weight="1"
            android:gravity="right"
            android:text="Item >"
            android:textSize="15sp"
            tools:ignore="RtlHardcoded" />
    </LinearLayout>
</FrameLayout>