<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectedShopActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_24_ek1_shape"
        android:theme="@style/Theme.LaundryClientMobile.AppBarOverlay">

        <RelativeLayout
            android:id="@+id/shape"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="-120dp"
            android:layout_marginLeft="-120dp"
            android:layout_marginTop="-160dp">

            <View
                android:id="@+id/ellipse_1"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="70dp"
                android:alpha="0.49000000953674"
                android:background="@drawable/ellipse_1_shape" />

            <View
                android:id="@+id/ellipse_2"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginStart="90dp"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="0dp"
                android:alpha="0.49000000953674"
                android:background="@drawable/ellipse_2_shape" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="-100dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/buttonBackSelectedShop"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/ic_baseline_arrow_back_ios_24" />

                <Button
                    android:id="@+id/buttonProfile"
                    android:layout_width="50dp"
                    android:layout_marginStart="290dp"
                    android:layout_marginLeft="230dp"
                    android:layout_height="50dp"
                    android:background="@drawable/ic_baseline_person_24" />

            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textViewTitle"
                android:layout_width="251dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="77dp"
                android:layout_marginLeft="77dp"
                android:layout_marginEnd="83dp"
                android:layout_marginRight="83dp"
                android:gravity="center"
                android:minHeight="?actionBarSize"
                android:padding="@dimen/appbar_padding"
                android:text="@string/app_name"
                android:textAppearance="@style/TextAppearance.Widget.AppCompat.Toolbar.Title" />
        </RelativeLayout>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-100dp"
            android:background="@drawable/category_box_shape"
            app:tabTextColor="@color/forgot_password_color" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="40dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_gravity="bottom"
        android:background="@color/ellipse_1_color"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewYourBasket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:text="Your Basket"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/noOfItemInCart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="50dp"
            android:layout_weight="1"
            android:gravity="right"
            android:text="Item >"
            android:textSize="15sp"
            tools:ignore="RtlHardcoded" />
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>